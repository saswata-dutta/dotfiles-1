[user]
  name = Piotr Solnica
  email = piotr.solnica@gmail.com

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color]
  ui = true

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore

[alias]
  st = status
  ci = commit
  cm = commit -am
  br = branch
  co = checkout
  df = diff
  lg = log -p
  aa = add .
  p  = push
  u  = up

[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = false

[push]
  default = matching
[github]
  user = solnic

[alias]
  sed = !sh -c 'git ls-files -z $2 | xargs -0 sed -i -e $1' -
